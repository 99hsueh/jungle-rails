
<!DOCTYPE html>
<html>
  <head>
    <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
  </head>
  <body>
    <h1>Order Confirmation: <%= @order.id %></h1>
      <div class="panel panel-default items">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Product</th>
              <th>Unit Price</th>
              <th>Quantity</th>
              <th>Price</th>
            </tr>
          </thead>
          <tbody>
            <% @order_total = 0 %>
            <% @order.line_items.each do |product| %>
              <%= render 'order', product_id: product.product_id, quantity: product.quantity %>
            <% end %>
          </tbody>
          <tfoot>
            <tr>
              <th colspan="4">
                TOTAL:
              </th>
              <th>
                <%= @order_total %>
              </th>
            </tr>
          </tfoot>
        </table>
      </div>
    <p>Thanks for your purchases and have a great day!</p>
  </body>
</html>